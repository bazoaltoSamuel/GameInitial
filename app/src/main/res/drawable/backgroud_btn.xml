<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#450163"></solid>
            <corners android:radius="@dimen/radioBtn"></corners>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#123545"></solid>
            <corners android:radius="@dimen/radioBtn"></corners>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#450163"
                android:endColor="#123545">
            </gradient>
            <corners android:radius="@dimen/radioBtn"></corners>
        </shape>
    </item>
</selector>